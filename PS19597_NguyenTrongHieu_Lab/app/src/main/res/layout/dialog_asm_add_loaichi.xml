<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleThemLoaiChiAsm"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#AEEA00"
        android:gravity="center"
        android:textStyle="bold"
        android:text="THÊM LOẠI CHI MỚI"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtThemTenLoaiChiAsm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Nhập tên loại chi mới" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnClearThemLoaiChiAsm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#777373"
            android:text="Xóa trắng"/>

        <Button
            android:id="@+id/btnAddThemLoaiChiAsm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#FFD600"
            android:text="Thêm"/>
    </LinearLayout>
</LinearLayout>