<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleThemKhoanThuAsm"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#AEEA00"
        android:gravity="center"
        android:textStyle="bold"
        android:text="THÊM KHOẢN THU MỚI"
        android:textSize="20sp" />

    <LinearLayout
        android:weightSum="3"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="Loại Thu: "
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Spinner
            android:id="@+id/spnKhoanThuAsm"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edtThemTieuDeKhoanThuAsm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Nhập tiêu đề khoản Thu" />
    <EditText
        android:id="@+id/edtThemNgayKhoanThuAsm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Nhập ngày thu" />
    <EditText
        android:id="@+id/edtThemTienKhoanThuAsm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Nhập số tiền thu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnClearThemKhoanThuAsm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#777373"
            android:text="Xóa trắng"/>

        <Button
            android:id="@+id/btnAddThemKhoanThuAsm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#FFD600"
            android:text="Thêm"/>
    </LinearLayout>
</LinearLayout>